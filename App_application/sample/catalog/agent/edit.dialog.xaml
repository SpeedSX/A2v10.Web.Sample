<Dialog xmlns="clr-namespace:A2v10.Xaml;assembly=A2v10.Xaml" 
		Title="{Bind Agent.Id, Format='@[Agent] [{0}]'}">
	<Dialog.Buttons>
		<Button Content="@[Save]" Command="{BindCmd SaveAndClose, ValidRequired=True}"/>
		<Button Content="@[Cancel]" Command="{BindCmd Close}"/>
	</Dialog.Buttons>
	<Grid>
		<TextBox Label="@[Name]" Value="{Bind Agent.Name}"/>
		<TextBox Label="@[FullName]" Value="{Bind Agent.FullName}"/>
		<TextBox Label="@[Code]" Value="{Bind Agent.Code}" Width="20rem"/>
		<TextBox Label="@[Phone]" Value="{Bind Agent.Phone, Mask='+38 (0##) ###-##-##'}" Width="20rem"/>
		<TextBox Label="@[EMail]" Value="{Bind Agent.EMail}" Width="20rem"/>
		<TextBox Label="@[Memo]" Value="{Bind Agent.Memo}" Multiline="True" Rows="3"/>
	</Grid>
</Dialog>